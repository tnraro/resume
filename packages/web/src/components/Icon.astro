---
interface Props {
  size?: number | `${number}`;
  as: "external-link" | "github" | "link" | "mail" | "phone" | "smartphone";
}
let { as, size } = Astro.props;
size = size ?? 16;
---

<svg width={size} height={size}>
  <use href={import.meta.env.BASE_URL + `/icons.svg#${as}`}></use>
</svg>

<style>
  svg {
    fill: none;
    stroke: currentColor;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }
</style>
